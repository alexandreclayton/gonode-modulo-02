<nav id="main">
  <div class="header">
    <strong>Minha biblioteca</strong>
    <a href="/signout">Sair</a>
  </div>

  <div class="categories">
    <strong>CATEGORIAS</strong>

    <ul>
      {% for category in categories %}
        {% if(categoryId and category.id == categoryId) %}
          <li class="active">
        {% else %}
          <li>
        {% endif %}
          <a href="/app/categories/{{category.id}}">
            {{category.title}}
            <span>{{category.Snippets.length}}</span>
          </a>
        </li>
      {% endfor %}
    </ul>

    <a href="/app/categories/create">NOVA CATEGORIA</a>
  </div>
</nav>
