{% extends "layouts/default.njk" %}

{% block body %}
  {% include "partials/nav.njk" %}
  {% include "partials/snippets.njk" %}

  <section class="snippet-content">
    <div class="actions">
      <a href="/app/snippets/edit/{{ currentSnippet.id }}" class="edit">Editar</a>
      <form action="/app/snippets/delete/{{ currentSnippet.id }}" method="post">
        <button type="submit">Remover</button>
      </form>
    </div>

    <h1>{{ currentSnippet.title }}</h1>
    <div class="content">{{ currentSnippet.formattedContent | safe }}</div>
  </section>

{% endblock %}
